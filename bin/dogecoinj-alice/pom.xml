	<mailingLists>
		<mailingList>
			<name>BitCoinJ Google Group</name>
			<post>https://groups.google.com/forum/#!forum/bitcoinj</post>
		</mailingList>
	</mailingLists>

	<scm>
		<url>http://code.google.com/p/bitcoinj/source/checkout</url>
